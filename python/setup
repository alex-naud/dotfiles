#!/bin/bash

# Symbolic link for pyling
echo "Create symbolic link for pylint config"
ln -sf "$PWD/pylintrc" "$HOME/.pylintrc"

# Create symbolic link for ipython config
if [ ! -d "$HOME/.ipython/profile_default" ]; then
  echo "No ipython default config, run install-python!"
else
  echo "Create symbolic links for ipython config"
  ln -sf "$PWD/ipython_config.py" \
    "$HOME/.ipython/profile_default/ipython_config.py"
fi

